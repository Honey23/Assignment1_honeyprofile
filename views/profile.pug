extends layout

block header

block content
  div.profile
    div.profile-image(style=`background: url('/images/${person.imgSrc}') top center
    no-repeat; background-size: cover;`)
    div.profile-details
      h3 About Me
      h1.profile-name
        | #{person.firstname} #{person.lastname}
      h2.profile-tagline
        | #{person.tagline}
      p.profile-bio
        | #{person.bio}
      a.button.button-twitter(href=`${person.twitter}`)
        | Twitter Link Click Me
      a.button.button-ContactMe(href='https://www.facebook.com')
        | ContactMe
      a.button.button-MyProjects(href='http://localhost:3000')
        | MyProjects
      a.button.button-MyServices(href='http://localhost:3000')
        | MyServices

